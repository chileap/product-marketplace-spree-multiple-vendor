<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>

<div class="container-fluid user-passwords">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <div class="col-lg-11 mx-auto">
        <h4 class="spree-header pt-5 pb-3">
          <%= Spree.t(:change_your_password) %>
        </h4>
        <%= simple_form_for @spree_user, as: :spree_user, url: spree.update_password_path, method: :put do |f| %>
          <div class="form-group">
            <%= f.input :password, input_html: { class: "spree-flat-input" }, required: true %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, input_html: { class: "spree-flat-input" }, required: true %>
          </div>
          <%= f.hidden_field :reset_password_token %>
          <%= f.submit Spree.t(:update), class: 'btn btn-primary w-100 rounded-pill mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
