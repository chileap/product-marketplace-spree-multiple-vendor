<div class="py-4">

  <div class="container-fluid">
    <div class="row">
      <div class="col-1">
        <span class="position-relative d-inline-block">
          <span class="d-inline-flex h-20 w-20 align-items-center justify-content-center rounded-pill bg-gray-500">
            <span class="text-2xl font-medium leading-none text-white">
              <%= "#{spree_current_user.first_name&.first(1)&.upcase}#{spree_current_user.last_name&.first(1)&.upcase}" %>
            </span>
          </span>
          <span class="position-absolute top-80 start-80 translate-middle rounded-2 border-2 border-white">
            <button type="button" class="d-block h-10 w-10 rounded-pill border d-flex align-items-center justify-content-center bg-white">
              <%= icon(name: 'camera', classes: 'd-inline-block', width: 18, height: 18) %>
            </span>
          </span>
        </span>
      </div>

      <div class="col-11">
        <div class="d-flex flex-column justify-content-center h-100">
          <p class="text-heading-01 text-black mb-1">
            <%= spree_current_user.first_name %> <%= spree_current_user.last_name %>
          </p>
          <p class="text-body-01 text-gray mb-1">
            <%= spree_current_user.email %>
          </p>

          <%= link_to 'Edit public profile', edit_user_profile_path, class: "text-decoration-underline text-secondary" %>
        </div>
      </div>
    </div>
  </div>
  <div class="w-100 border-bottom my-4"></div>

  <div class="d-flex flex-column max-width-sm align-items-center px-3 py-5">
    <span class="icon--brand bg-gray">
