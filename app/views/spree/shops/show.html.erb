<div class="container-fluid py-4">
  <h1><%= @shop.name %></h1>

  <% if @shop.products.present? %>
    <%= render 'spree/shared/products', products: @shop.products %>
  <% else %>
    <div class="col-md-6 mx-auto text-center py-5">
      <span class="d-flex justify-content-center">
        <%= icon name: "shopping", width: 150, height: 150 %>
      </span>
      <h2>No products</h2>
      <p>There are no products in this shop</p>
    </div>
  <% end %>
</div>
